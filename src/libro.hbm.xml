<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC
        "-//Hibernate/Hibernate Mapping DTD//EN"
        "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd">

<hibernate-mapping>
    <class name="Objetos.Libro" table="libro">
        <meta attribute="class-description">
            This class contains the employee detail.
        </meta>
        <id name="id" type="int" column="id">
            <generator class="increment"/>
        </id>
        <property name="titulo" column="titulo" type="string"/>
        <property name="numEjemplares" column="numEjemplares" type="int"/>
        <property name="Editorial" column="Editorial" type="string"/>
        <property name="numPaginas" column="numPaginas" type="int"/>
        <property name="anyoEdicion" column="anyoEdicion" type="int"/>

    </class>
</hibernate-mapping>